apiVersion: platform.integratn.tech/v1alpha1
kind: ArgoCDApplication
metadata:
  name: media
  namespace: platform-requests
  labels:
    app.kubernetes.io/name: argocd-application
    app.kubernetes.io/managed-by: kratix
    kratix.io/promise-name: vcluster-orchestrator-v2
    kratix.io/resource-name: media
spec:
  name: vc-media
  project: vcluster-media
  destination:
    server: https://kubernetes.default.svc
    namespace: vcluster-media
  source:
    repoURL: https://charts.loft.sh
    chart: vcluster
    targetRevision: 0.30.4
    helm:
      releaseName: media
      valuesObject:
        vcluster:
          image:
            tag: v1.34.3
        controlPlane:
          distro:
            k8s:
              enabled: true
          statefulSet:
            highAvailability:
              replicas: 3
          service:
            type: LoadBalancer
            annotations:
              io.cilium/lb-ipam-ips: 
          backingStore:
            etcd:
              deploy:
                enabled: true
                statefulSet:
                  highAvailability:
                    replicas: 3
          coredns:
            enabled: false
        sync:
          toHost:
            ingresses:
              enabled: true
            services:
              enabled: true
            persistentVolumeClaims:
              enabled: true
            storageClasses:
              enabled: true
          fromHost:
            ingressClasses:
              enabled: true
            storageClasses:
              enabled: true
        networking:
          replicateServices:
            fromHost:
              - from: default/kubernetes
                to: default/kubernetes
        integrations:
          externalDNS:
            enabled: true
            domain: media.integratn.tech
            sync: enabled
        resources:
          requests:
            cpu: 500m
            memory: 2Gi
          limits:
            cpu: 2
            memory: 2Gi
        persistence:
          volumeClaim:
            enabled: true
            size: 10Gi
        telemetry:
          disabled: true

